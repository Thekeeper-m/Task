/* pages/remindOrder/remindOrder.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
}

.no-content {
    position: absolute;
    transform: translate(45%,50%);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.no-content image {
    width: 400rpx;
    height: 350rpx;
}

.show-text {
    font-size: 40rpx;
    color: #a9a6aa;
    margin-top: 20rpx;
    margin-right: 15rpx;
}

.remind-order {
    margin-top: 20rpx;
    width: 100%;
    height: auto;
    background-color: white;
}

.order-box {
    padding: 10rpx 15rpx 20rpx 15rpx;
    width: 100%;
    height: auto;
}

.wrap {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    height: auto;
}

.title {
    display: flex;
    flex-direction: column;
    width: 23%;
}

.content {
    display: flex;
    flex-direction: column;
    width: 77 %;
}

.titleStyle {
    color: #676467;
    margin-top: 10rpx;
}

.contentStyle {
    margin-top: 10rpx;
    font-family: HelveticaNeue;
    color: #1A1A1A;
}