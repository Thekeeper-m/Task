/* pages/messageHouse/messageHouse.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
}

.wrap {
    width: 100%;
    height: 700rpx;
    background-color: white;
    margin-top: 15rpx;
}

.cu-form-group {
    padding: 1rpx 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.cu-form-group textarea {
    width: 100%;
    flex: 1;
    font-size: 28rpx;
    padding: 0;
    height:350rpx;
}

.textHeight {
    height: 400rpx;
}

.grid {
    display: flex;
    flex-wrap: wrap;
    flex: 1;
    overflow: hidden;
}

.grid image {
    width: 230rpx;
    height: 230rpx;
}

.button {
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: center;
    margin-top: 80rpx;
  }
  
  .uploadbutton {
    width: 550rpx;
    height: 85rpx;
    background-color: #378CFF;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 70rpx;
    color: white;
  }
