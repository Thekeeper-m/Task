/* pages/mine/mine.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
}

.blue-bg {
    background-repeat: no-repeat;
    width: 100%;
    height: 380rpx;
}

.title {
    color: white;
    width: 100%;
    padding-top: 110rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
}

.mine-content {
    width: 100%;
    height: auto;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-top: 50rpx;
}

.head {
    width: 140rpx;
    height: 140rpx;
    border-radius: 65rpx;
    margin-left: 50rpx;
}

.warp {
    /* display: flex;
    flex-wrap: wrap; */
    margin-left: 30rpx;
    width: 60%;
}

.name {
    font-size: 28rpx;
    color: white;
}

.part {
    font-size: 26rpx;
    color:white
}

.arrow {
    width: 35rpx;
    height: 35rpx;
}

.changePassword {
    width: 100%;
    height: 100rpx;
    background-color: white;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.changePassword image {
    width: 55rpx;
    height: 55rpx;
    margin: 0 25rpx;
}

.arrows {
    width: 20rpx;
    height: 20rpx;
    border-top: 2rpx solid #999;
    border-right: 2rpx solid #999;
    transform: rotate(45deg);
}