/* pages/personalInformation/personalInformation.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
}

.head-infor {
    width: 100%;
    height: 150rpx;
    margin: 20rpx 0;
    background-color: white;
    display: flex;
    align-items: center;
}
.head-infor image {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50rpx;
    margin: 0 30rpx;
}

.wrap {
    width: 100%;
    height: 201rpx;
    background-color: white;
    padding: 0 0 0 20rpx;
}

.department {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #E4E4E4;
}
.post {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.title {
    font-size: 30rpx;
    margin-right: 15rpx;
    width: 15%;
}

.content {
    font-size: 30rpx;
    color: #565656;
}