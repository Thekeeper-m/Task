/* pages/messageList/messageList.wxss */
page {
    width: 100%;
    height: auto;
    background-color: #f5f5f5;
    padding-bottom: 110rpx;
    /* padding-bottom作用为新增按钮遮挡了部分内容 在IOS情况下margin-bottom存在失效的情况 */
}

.msgTime {
    font-size: 26rpx;
    color:#8B888B;
    margin-bottom: 10rpx;
}

.msgContent {
    font-size: 28;
    color: #1A1A1A;
}

.wrap {
    width: 100%;
    height: auto;
    background-color: white;
    margin-top: 15rpx;
}

.msgContainer {
    padding: 25rpx;
    height: 100%;
}

.bg-img {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    margin-right: 15rpx;
    margin-bottom: 20rpx;
    width: calc((100% - 45rpx)/3);
}

.bg-img image {
    max-width: 100%;
    height: 230rpx;
}

.imageShow {
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
    flex: 1;
    margin-left:15rpx;
    margin-top: 30rpx;
}

.bottom-button {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
    width: 100%;
    height: 100rpx;
    bottom: 0;
}

.bottom-button image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 20rpx;
}

.blue {
    color: #4D90FB;
}