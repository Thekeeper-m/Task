/* pages/orderManagement/orderManagement.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
}

.background {
    width: 100%;
    height: 200rpx;
    background-color: #4684FF;
    position: static;
}

.picker {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: white;
}

.picker image {
    width: 23rpx;
    height: 20rpx;
    margin-left: 15rpx;
    font-size: 28rpx
}

.section {
    padding-top: 20rpx;
    display: flex;
    justify-content: space-around;
}

.pickerDate {
    display: flex;
    align-items: center;
}

.pickerDate image {
    width: 23rpx;
    height: 20rpx;
    margin-left: 15rpx;
    font-size: 28rpx
}

.search {
    width: 150rpx;
    height: 60rpx;
    background-color: #7EA9FF;
    border-radius: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.select {
    display: flex;
    align-items: center;
}

.search image {
    width: 45rpx;
    height: 45rpx;
    margin-right: 15rpx;
}

.searchtext {
    font-size: 28rpx;
    color: white;
}

.hotmsg {
    position: relative;
    width: 700rpx;
    height: 135rpx;
    background-color: white;
    top: -7%;
    margin: 0 auto;
    border-radius: 25rpx;
}