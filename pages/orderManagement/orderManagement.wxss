page {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
}

.background {
    width: 100%;
    height: 200rpx;
    background-color: #4684FF;
}

.picker {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: white;
}

.picker image {
    width: 23rpx;
    height: 20rpx;
    margin-left: 15rpx;
    font-size: 28rpx
}

.section {
    padding-top: 35rpx;
    display: flex;
}

.pickerDate {
    display: flex;
    align-items: center;
}

.pickerDate image {
    width: 23rpx;
    height: 20rpx;
    margin-left: 15rpx;
    font-size: 28rpx
}

.search {
    width: 200rpx;
    height: 60rpx;
    background-color: #7EA9FF;
    border-radius: 20rpx;
}